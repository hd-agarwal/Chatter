<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        tools:src="@mipmap/ic_default_profile"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/tvTime"
        android:layout_toEndOf="@id/ivUserPhoto"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Harsh Dhar Agarwal"
        android:textColor="?attr/colorOnBackground"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContactName"
        android:layout_alignStart="@id/tvContactName"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/tvCount"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Hey there! I am using Chatter"
        android:textSize="15sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:lines="1"
        android:text="04/09/21"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTime"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/count_background"
        android:lines="1"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:text="5"
        android:textColor="?attr/colorOnPrimary"
        android:visibility="gone"
        tools:visibility="visible" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/emoji_gray70"
    android:layout_below="@+id/ivUserPhoto"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"/>

</RelativeLayout>

